<actionViewModels:ActionControl
    x:Class="pdfforge.PDFCreator.UI.Views.ActionControls.CoverActionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:actionViewModels="clr-namespace:pdfforge.PDFCreator.UI.ViewModels.ActionViewModels;assembly=PDFCreator.ViewModels"
    xmlns:actionViewModels1="clr-namespace:pdfforge.PDFCreator.UI.DesignTimeViewModels.ActionViewModels;assembly=PDFCreator.DesignTimeViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
    d:DataContext="{d:DesignInstance actionViewModels1:DesignTimeCoverViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <StackPanel>
            <Label>
                <TextBlock Text="{Binding Translation.CoverFileText}"></TextBlock>
            </Label>
            <DockPanel>
                <Button DockPanel.Dock="Right" Margin="5 0 0 0" Width="25" Command="{Binding SelectCoverCommand}">...</Button>
                <TextBox Name="CoverFileTextBox" Text="{Binding CurrentProfile.CoverPage.File}" />
            </DockPanel>
        </StackPanel>
    </Grid>
</actionViewModels:ActionControl>