    <!-- The template is used in the PrintJobView to display the current icon based on the  -->
    <DataTemplate x:Key="FileTypeIconDropDownTemplate">
        <StackPanel>
            <StackPanel.Resources>
                <converter:OutputFormatToTextConverter x:Key="OutputFormatToTextConverter" />
            </StackPanel.Resources>
            <ContentControl MaxWidth="48">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content" Value="{DynamicResource FileTypePdf}" />

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Png}">
                                <Setter Property="Content" Value="{DynamicResource FileTypePng}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Tif}">
                                <Setter Property="Content" Value="{DynamicResource FileTypeTif}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Txt}">
                                <Setter Property="Content" Value="{DynamicResource FileTypeTxt}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Jpeg}">
                                <Setter Property="Content" Value="{DynamicResource FileTypeJpeg}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <TextBlock TextAlignment="Center" Text="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl},Converter={StaticResource OutputFormatToTextConverter}}" />
        </StackPanel>
    </DataTemplate>
